{
	"name": "istanbul-merge",
	"version": "1.1.1",
	"author": {
		"name": "Jordan Harband",
		"email": "ljharb@gmail.com",
		"url": "http://ljharb.codes"
	},
	"contributors": [
		{
			"name": "Jordan Harband",
			"email": "ljharb@gmail.com",
			"url": "http://ljharb.codes"
		}
	],
	"description": "Merge multiple istanbul coverage reports into one",
	"license": "MIT",
	"bin": {
		"istanbul-merge": "bin/istanbul-merge"
	},
	"scripts": {
		"pretest": "npm run --silent lint",
		"test": "npm run --silent tests-only",
		"posttest": "npm run --silent security",
		"tests-only": "echo no tests yet",
		"lint": "npm run --silent jscs && npm run --silent eslint",
		"jscs": "jscs */*.js bin/istanbul-merge",
		"eslint": "eslint */*.js bin/istanbul-merge",
		"security": "nsp check"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/ljharb/istanbul-merge.git"
	},
	"keywords": [
		"istanbul",
		"coverage",
		"merge",
		"report"
	],
	"dependencies": {
		"foreach": "^2.0.5",
		"glob": "^7.0.5",
		"istanbul-lib-coverage": "^1.0.0",
		"mkdirp": "^0.5.1",
		"yargs": "^4.8.1"
	},
	"devDependencies": {
		"tape": "^4.6.0",
		"covert": "^1.1.0",
		"jscs": "^3.0.7",
		"editorconfig-tools": "^0.1.1",
		"nsp": "^2.6.1",
		"eslint": "^3.3.0",
		"@ljharb/eslint-config": "^7.0.0"
	},
	"testling": {
		"files": "test.js",
		"browsers": [
			"iexplore/6.0..latest",
			"firefox/3.0..6.0",
			"firefox/15.0..latest",
			"firefox/nightly",
			"chrome/4.0..10.0",
			"chrome/20.0..latest",
			"chrome/canary",
			"opera/10.0..latest",
			"opera/next",
			"safari/4.0..latest",
			"ipad/6.0..latest",
			"iphone/6.0..latest",
			"android-browser/4.2"
		]
	},
	"engines": {
		"node": ">= 0.4"
	}
}
